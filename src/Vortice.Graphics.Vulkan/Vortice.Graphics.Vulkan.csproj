<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="D3D12/**/*" Condition="'$(ExcludeD3D12)' == 'true'" />
    <Compile Remove="Vulkan/**/*" Condition="'$(ExcludeVulkan)' == 'true'" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Vortice.Vulkan" Version="1.3.4" Condition="'$(ExcludeVulkan)' != 'true'" />
    <PackageReference Include="TerraFX.Interop.Windows" Version="10.0.19041-beta2" Condition="'$(ExcludeD3D12)' != 'true'" />
    <PackageReference Include="TerraFX.Interop.D3D12MemoryAllocator" Version="2.0.0-beta1" Condition="'$(ExcludeD3D12)' != 'true'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Vortice.Graphics\Vortice.Graphics.csproj" />
  </ItemGroup>

</Project>
