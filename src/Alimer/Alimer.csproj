<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net9.0;$(AlimerPlatforms)</TargetFrameworks>
    <IsPackable>true</IsPackable>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="$(AlimerRootDirectory)/README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <Import Project="$(AlimerRootDirectory)Alimer.MultiTargeting.targets" />

  <ItemGroup>
    <Compile Remove="Audio/OpenAL/**/*" Condition="'$(ExcludeOpenAL)' == 'true'" />
    <!--<Compile Remove="Audio/XAudio2/**/*" Condition="'$(ExcludeXAudio2)' == 'true'" />-->
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" />
    <PackageReference Include="CommunityToolkit.Diagnostics" />

    <!-- Audio -->
    <PackageReference Include="MonoGame.Library.OpenAL" Condition="'$(ExcludeOpenAL)' != 'true'" />
  </ItemGroup>

  <ItemGroup>
    <Using Remove="System.Linq" />
    <Using Include="Alimer.Numerics" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Alimer.Native\Alimer.Native.csproj" />
  </ItemGroup>

</Project>
