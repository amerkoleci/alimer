<Project>
  <!-- https://learn.microsoft.com/nuget/consume-packages/central-package-management -->
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <CentralPackageTransitivePinningEnabled>true</CentralPackageTransitivePinningEnabled>
  </PropertyGroup>

  <ItemGroup>
    <GlobalPackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" />
  </ItemGroup>

  <!-- Package versions for package references across all projects -->
  <PropertyGroup>
    <VorticeWin32Version>2.0.0</VorticeWin32Version>
    <TerraFXWindowsVersion>10.0.22621.2</TerraFXWindowsVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="CommunityToolkit.Diagnostics" Version="8.2.1" />

    <!-- Platform specific -->
    <PackageVersion Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.25936-preview" />
    <PackageVersion Include="Microsoft.WindowsAppSDK" Version="1.4.230913002" />

    <!-- Engine -->
    <PackageVersion Include="Alimer.Bindings.SDL" Version="3.2.4" />
    <PackageVersion Include="Alimer.Bindings.WebGPU" Version="1.3.0" />
    <PackageVersion Include="Silk.NET.OpenAL.Soft.Native" Version="1.21.1.2" />
    <PackageVersion Include="Vortice.Win32.Media.Audio.XAudio2" Version="$(VorticeWin32Version)" />
    <PackageVersion Include="Vortice.Win32.Graphics.Direct3D12" Version="$(VorticeWin32Version)" />
    <PackageVersion Include="TerraFX.Interop.Windows" Version="$(TerraFXWindowsVersion)" />
    <PackageVersion Include="TerraFX.Interop.D3D12MemoryAllocator" Version="2.0.1.4" />
    <PackageVersion Include="Vortice.Vulkan" Version="1.8.0" />
    <PackageVersion Include="Vortice.VulkanMemoryAllocator" Version="1.3.8" />
    <PackageVersion Include="Vortice.SpirvCross" Version="1.4.2" />
    <PackageVersion Include="JoltPhysicsSharp" Version="1.9.6" />

    <PackageVersion Include="ImGui.NET" Version="1.89.9.2" />

    <!-- Asset Pipeline -->
    <PackageVersion Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageVersion Include="SkiaSharp" Version="2.88.6" />
    <PackageVersion Include="HarfBuzzSharp" Version="7.3.0" />
    <PackageVersion Include="SharpGLTF.Core" Version="1.0.0-alpha0030" />
    <PackageVersion Include="Vortice.Win32.Graphics.Direct3D.Dxc" Version="$(VorticeWin32Version)" />

    <!-- Tests -->
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.7.2" />
    <PackageVersion Include="xunit" Version="2.5.1" />
    <PackageVersion Include="xunit.console" Version="2.5.1" />
    <PackageVersion Include="xunit.runner.visualstudio" Version="2.5.1" />
    <PackageVersion Include="Xunit.SkippableFact" Version="1.4.13" />
  </ItemGroup>

</Project>
