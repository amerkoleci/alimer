<Project>
  <!-- https://learn.microsoft.com/nuget/consume-packages/central-package-management -->
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <CentralPackageTransitivePinningEnabled>true</CentralPackageTransitivePinningEnabled>
  </PropertyGroup>

  <ItemGroup>
    <GlobalPackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" />
  </ItemGroup>

  <!-- Package versions for package references across all projects -->
  <PropertyGroup>
    <TerraFXWindowsVersion>10.0.22621.2</TerraFXWindowsVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="CommunityToolkit.Diagnostics" Version="8.2.1" />

    <!-- Platform specific -->
    <PackageVersion Include="Microsoft.WindowsAppSDK" Version="1.4.230628000-preview1" />
    
    <!-- Engine -->
    <PackageVersion Include="ppy.SDL2-CS" Version="1.0.671-alpha" />
    <PackageVersion Include="Silk.NET.OpenAL.Soft.Native" Version="1.21.1.2" />
    <PackageVersion Include="TerraFX.Interop.Windows" Version="$(TerraFXWindowsVersion)" />
    <PackageVersion Include="TerraFX.Interop.D3D12MemoryAllocator" Version="2.0.1.4" />
    <PackageVersion Include="Vortice.Vulkan" Version="1.7.7" />
    <PackageVersion Include="Vortice.VulkanMemoryAllocator" Version="1.3.6" />
    <PackageVersion Include="Vortice.SpirvCross" Version="1.4.2" />
    <PackageVersion Include="JoltPhysicsSharp" Version="1.8.3" />

    <!-- Asset Pipeline -->
    <PackageVersion Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageVersion Include="SkiaSharp" Version="2.88.4-preview.84" />
    <PackageVersion Include="HarfBuzzSharp" Version="2.8.2.4-preview.84" />
    <PackageVersion Include="SharpGLTF.Core" Version="1.0.0-alpha0029" />
    
    <!-- Tests -->
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.6.3" />
    <PackageVersion Include="xunit" Version="2.5.0" />
    <PackageVersion Include="xunit.console" Version="2.5.0" />
    <PackageVersion Include="xunit.runner.visualstudio" Version="2.5.0" />
    <PackageVersion Include="Xunit.SkippableFact" Version="1.4.13" />
  </ItemGroup>

</Project>
